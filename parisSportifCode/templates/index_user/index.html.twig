{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
{% block body %}
  {% include "commonPart/header.html.twig" %}
    {% include "commonPart/menu.html.twig" %}
    <section class="container-fluid" id="page-content">
        <div class="row">
            {% include "commonPart/sportListLeft.html.twig" %}
            <div class="col-sm-12 col-md-6">
                <section class="central">
                    <div class="container-fluid p-0">
                        <div class="row mt-4">
                            <div class="col-sm-12 mt-4 bet-board card p-2">
                                <h4>All Sports</h4>
                                <table class="table table-hover fw-bold">
                                    <thead>
                                    <tr>
                                        <th scope="col" colspan="2">Match</th>
                                        <th class="text-center" scope="col"></th>
                                        <th class="text-center" scope="col"></th>
                                        <th class="text-center" scope="col"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ListEvenement in ListEvenements %}
                                        <tr>
                                            <td class="" colspan="2">
                                                <p>{{ ListEvenement.equipe[0].name }}<br>
                                                    {{ ListEvenement.equipe[1].name }}<br>
                                                    {{ ListEvenement.competionn.name }}<br>
                                                </p>
                                            </td>
                                            {% for listBet in listBets %}
                                            {% if listBet.evenement.id == ListEvenement.id %}
                                            <td class="text-center">
                                                <a type="button" class="btn btn-danger btn-sm" href="/indexuser/choice/bet/{{ listBet.id }}">{{ listBet.nameBet }} {{ listBet.cote }}</a>
                                            </td>
                                            {% endif %}
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
                <div class="col-sm-12 col-md-3">
                    <aside class="container-fluid aside-right">
                        <div class="row card mt-4 p-2">
                            <section class="col-sm-12 bet-ticket">
                                {% if users.betUsers is not empty %}
                                <div class="row">
                                    {% for bUser in users.betUsers %}
                                    <div class="col-10">
                                        <p>{{ bUser.bet.evenement.name }}</p>
                                        <p>{{ bUser.bet.evenement.equipe[0].name }} VS {{ bUser.bet.evenement.equipe[1].name }}</p>
                                        <p>Cote : {{ bUser.bet.cote }}</p>
                                        <form class="ui form" action="message" method="get">

                                            <div class="field">
                                                <label>Sum:</label>
                                                <input type="number" name="sum">
                                            </div>

                                            <div class="field">
                                                <input type="hidden" name="message" value="{{ bUser.id }}">
                                            </div>

                                            <button class="ui button" type="submit">Send</button>

                                        </form>
                                    </div>
                                    {% endfor %}
                                </div>
                                {% else %}
                                    <p>Vous etes rattaché à aucun pari.</p>
                                {% endif %}

                            </section>
                        </div>
                    </aside>

                </div>
            </div>
    </section>
        </div>


{% endblock %}