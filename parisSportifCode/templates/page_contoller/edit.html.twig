{% extends 'base.html.twig' %}

{% block title %}Hello PageContollerController!{% endblock %}

{% block body %}
    {% include "commonPart/header.html.twig" %}
    <div class="row ">
        <div class="col-sm-12 header-top ">
            <nav class="navbar navbar-expand navbar-light bg-danger nav-main">
                <div class="container-fluid">
                    <div id="logo">
                        <a class="navbar-brand" href="#">LOGO</a>
                    </div>
                    <div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <a class="navbar-brand" href="{{ path('bet_list') }}">Paris en cours</a>
                                {# Dropdown 1 #}
                                <li class="nav-item dropdown dropdown-1">
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('wallet') }}">Solde du compte</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('wallet_add') }}">Ajouter des fonds</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('wallet_draw') }}">Retirer des fonds</a>
                                        </li>
                                    </ul>
                                </li>
                                {# Dropdown 2 #}
                                <li class="nav-item dropdown dropdown-2 ">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        {{ user.firstname }} {{ user.lastname }}
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('auth') }}">Mes informations</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_document_new') }}">Activation de compte</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">Cl√¥ture de compte</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    {# Header Bottom #}
    <div class="row">
        <div
                class="col-sm-12 header-bottom">
            {# Nav Secondary #}
            <nav class="navbar navbar-expand-lg navbar-light bg-warning nav-secondary">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav d-flex justify-content-around w-100">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Tous les Sports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/sports/football"><i class='fas fa-futbol' style='font-size:26px'></i> Football</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/sports/handball"><i class='fas fa-futbol' style='font-size:24px'></i> Handball</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class='fas fa-basketball-ball' style='font-size:26px'></i> Basket</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Tennis</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" href="#"><i class='fas fa-table-tennis' style='font-size:24px'></i> Tennis de table</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Formule 1</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    {% if active == false %}
        <div class="alert alert-danger text-center">Veuillez activer votre compte pour parier
            <a class="navbar-brand" href="{{ path('app_document_new') }}">
                <strong>clic ici</strong>
            </a>
        </div>
    {% endif %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ user.firstname }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="mt-3 text-center">
                            <h4>Edit Email</h4>
                        </div>
                        <div class="card-body">

                            {{ form_start(formEmail, { attr: {novalidate: 'novalidate'} }) }}
                            {{ form_widget(formEmail) }}
                            {{ form_end(formEmail) }}
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="mt-3 text-center">
                            <h4>Edit password</h4>
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="card-body">
                            {% if editPassword %}
                                {{ form_start(formEdit, { attr: {novalidate: 'novalidate'} }) }}
                                {{ form_widget(formEdit) }}
                                {{ form_end(formEdit) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
