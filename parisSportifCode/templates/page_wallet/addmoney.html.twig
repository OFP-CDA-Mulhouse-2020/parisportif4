{% extends 'base.html.twig' %}

{% block title %}Hello PageContollerController!{% endblock %}

{% block body %}
    {% include "commonPart/header.html.twig" %}
    {% include "commonPart/menu.html.twig" %}
{% if active == false %}
    <div class="alert alert-danger text-center">Veuillez activer votre compte pour parier
        <a class="navbar-brand" href="{{ path('app_document_new') }}">
            <strong>clic ici</strong>
        </a>
    </div>
{% endif %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ users.firstname }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="mt-3 text-center">
                            <h4>Add Money</h4>
                            {% for message in app.flashes('errorA') %}
                                <div class="alert alert-danger">
                                    {{ message }}<a class="navbar-brand" href="{{ path('app_document_new') }}">
                                        <strong>clic ici</strong>
                                    </a>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>

                    <div class="card-body text-center">

                        {{ form_start(formWallet, { attr: {novalidate: 'novalidate'} }) }}
                        {{ form_widget(formWallet) }}
                        {{ form_end(formWallet) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
